
.img {
	/*第一排黑色大框架*/
	padding-top: 50rpx;
	width: 100%;
	height: 200rpx;
	background-color: black;
	opacity: 0.8;
}
.img-first ._p {
	margin-left: 34rpx;
	font-size: 44rpx;
	color: white;
}
.img-two ._p {
	margin-left: 34rpx;
	margin-top: 20rpx;
	font-size: 34rpx;
	color: #FF0000;
}
.img-three ._p {
	margin-left: 34rpx;
	margin-top: 20rpx;
	font-size: 26rpx;
	color: white;
}
.claim {
	/*第二排大框架*/
	width: 100%;
	height: 150rpx;
	padding-top: 20rpx;
	background: white;
}
.claim ._p {
	/*招聘要求*/
	font-size: 29rpx;
	color: #B2B2B2;
	margin-left: 34rpx;
	margin-top: 26rpx;
}
.claim .day {
	float: left;
	padding: 5rpx;
	margin-top: 20rpx;
	margin-left: 34rpx;
	border: 0.6rpx solid #ff660d;
	border-radius: 8rpx;
	color: #ff660d;
	background: #ffe9de;
	font-size: 24rpx;
}
.claim .nine,
.claim .man {
	float: left;
	padding: 5rpx;
	margin-top: 20rpx;
	margin-left: 20rpx;
	border: 0.6rpx solid #ff660d;
	border-radius: 8rpx;
	color: #ff660d;
	background: #ffe9de;
	font-size: 24rpx;
}
.gray {
	/*分界线*/
	width: 100%;
	height: 20rpx;
	background: #EDEDED;
}
.details {
	width: 100%;
	background: white;
}
.work-title {
	width: 200rpx;
	margin-left: 40rpx;
	margin-top: 10rpx;
	font-size: 35rpx;
}
.details ._p {
	margin: 10rpx 40rpx;
	color: #555555;
	font-size: 30rpx;
}

