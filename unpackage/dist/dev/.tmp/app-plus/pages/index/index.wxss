
.body {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.header {
	background: #fc4243;
	width: 100%;
	position: fixed;
	top: 0;
	font-size: 25px !important;
}
.header>.status-bar {
	height: var(--status-bar-height);
}
.header>.info {
	color: #FFFFFF;
	height: 44px;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.header>.info>.title {
	float: left;
	margin-left: 15rpx;
	margin-top: 10rpx;
	font-size: 24px;
}
.header>.info>.serach {
	height: 30px;
	width: 610rpx;
	border-radius: 15px;
	overflow: hidden;
	background-color: #FFFFFF !important;
}
.header>.info>.serach>.serach-icon {
	float: left;
	color: grey;
	margin-top: 8px;
	margin-left: 6px;
	font-size: 14px !important;
}
.header>.info>.serach>.serach-text {
	float: left;
	color: grey;
	margin-top: 5px;
	margin-left: 3px;
	font-size: 14px !important;
}
.index {
	background: #fc4243;
	height: 150rpx;
	padding: 15rpx;
	margin-top: calc(var(--status-bar-height) + 44px);
	/* border-bottom-left-radius: 50px;
	border-bottom-right-radius: 50px; */
}
.grace-swiper {
	overflow: hidden;
	border-radius: 10px;
}
.grace-wrap {
	margin-top: 20rpx;
}
.grace-boxes-img {
	width: 38px;
	height: 38px;
}
.grace-boxes-text {
	color: #7F7F7F;
}

